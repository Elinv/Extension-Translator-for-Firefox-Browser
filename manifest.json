{
    "manifest_version": 2,
    "name": "__MSG_extensionNombre__",
    "description": "__MSG_extensionDescripcion__",
    "version": "2.5",
    "author": "Elinv",
    "default_locale": "en",
    "icons": {
        "256": "ico/firefox.png"
    },
    "applications": {
        "gecko": {
            "id": "jid1-sllPjYpRBsnPyA@jetpack",
            "strict_min_version": "57.0"
        }
    },
    "background": {
        "scripts": [
            "./scripts/main.js"
        ]
    },
    "content_scripts": [{
        "matches": [
            "<all_urls>"
        ],
        "js": [
            "./opciones/opciones.js",
            "./opciones/traduccion.js",
            "./scripts/creaElemCorrector.js"
        ]

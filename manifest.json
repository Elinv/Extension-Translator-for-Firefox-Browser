        "contextMenus",
        "tabs",
        "activeTab",
        "storage",
        "menus"
    ],
    "web_accessible_resources": [
        "./ico/firefox.png",
        "./ico/info.png",
        "./ico/verde.png",
        "./ico/Argentina.png",
        "./ico/firefox.png",
        "./ico/google.png",
        "./ico/google1.png",
        "./ico/selectIN.png",
        "./ico/selectOUT.png",
        "./ico/wikipedia.png",
        "./ico/wordreference.png",
        "./opciones/traduccion.js",

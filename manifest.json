        "./panel/multitradScript.js",
        "./panel/panelIdioma.js",
        "./panel/panelIdioma.css",
        "./panel/traduccion.js",
        "./scripts/creaElemCorrector.js"
    ],
    "browser_action": {
        "default_title": "__MSG_extensionTitleIcon__",
